def auction_report():
    while True:
        auction_item_id = input("Enter auction item ID (or 'exit' to stop): ")
        if auction_item_id.lower() == 'exit':
            break
        
        auction_description = input("Enter auction item description: ")
        auction_length = int(input("Enter auction length in days: "))
        minimum_bid = float(input("Enter minimum required bid: "))
        
        # Part a
        if minimum_bid > 250:
            print(f"Auction Item: {auction_item_id}, Description: {auction_description}, Length: {auction_length}, Min Bid: ${minimum_bid}")

        # Part b
        if minimum_bid > 300:
            print(f"Auction Item: {auction_item_id}, Description: {auction_description}, Length: {auction_length}, Min Bid: ${minimum_bid}")

        # Part c
        if minimum_bid == 0 and auction_length <= 7:
            print(f"Auction Item: {auction_item_id}, Description: {auction_description}, Length: {auction_length}, Min Bid: ${minimum_bid}")

        # Part d
        if 14 <= auction_length <= 28:
            print(f"Auction Item: {auction_item_id}, Description: {auction_description}, Length: {auction_length}, Min Bid: ${minimum_bid}")

    # Part e
    max_bid = float(input("Enter maximum required bid: "))
    while True:
        auction_item_id = input("Enter auction item ID (or 'exit' to stop): ")
        if auction_item_id.lower() == 'exit':
            break
        
        auction_description = input("Enter auction item description: ")
        auction_length = int(input("Enter auction length in days: "))
        minimum_bid = float(input("Enter minimum required bid: "))

        if minimum_bid <= max_bid:
            print(f"Auction Item: {auction_item_id}, Description: {auction_description}, Length: {auction_length}, Min Bid: ${minimum_bid}")

if __name__ == "__main__":
    auction_report()